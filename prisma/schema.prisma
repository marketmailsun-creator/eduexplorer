generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") 
}

// ============================================
// NextAuth Tables (Required for OAuth)
// ============================================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================
// User Model (Updated for OAuth)
// ============================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String?   // Optional now (OAuth users don't have passwords)
  image         String?
  emailVerified DateTime?
  dateOfBirth   DateTime?
  age           Int?      // RESTORED: Required for content moderation
  plan          String    @default("free")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts      Account[]
  sessions      Session[]
  queries       Query[]
  savedContent  SavedContent[]
  preferences   UserPreferences?
  analytics     LearningAnalytics[]
  sharedContent      SharedContent[]
  comments           Comment[]
  commentLikes       CommentLike[]
  createdGroups      StudyGroup[]
  groupMemberships   StudyGroupMember[]
  groupSharedContent GroupSharedContent[]
  quizScores         QuizScore[]
  followers          UserFollow[]      @relation("UserFollower")
  following          UserFollow[]      @relation("UserFollowing")

  // Razorpay fields
  razorpayCustomerId    String?
  razorpayOrderId       String?
  razorpayPaymentId     String?
  razorpaySubscriptionId String?  @unique 
  
  pushSubscriptions PushSubscription[]
  subscription Subscription[]
  savedQueries      SavedQuery[]

  @@map("users")
}

// ============================================
// Application Models (Unchanged)
// ============================================

model UserPreferences {
  id              String  @id @default(cuid())
  userId          String  @unique
  learningLevel   String  @default("college")
  preferredVoice  String  @default("professional")
  autoAudio       Boolean @default(false)
  theme           String  @default("light")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_preferences")
}

model Query {
  id              String   @id @default(cuid())
  userId          String
  queryText       String
  topicDetected   String?
  complexityLevel String?
  status          String   @default("processing")
  createdAt       DateTime @default(now())

  user         User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  researchData ResearchData?
  content      Content[]
  sharedContent SharedContent[]

  quizScores         QuizScore[]
  savedByUsers      SavedQuery[]
  @@index([userId])
  @@index([createdAt])
  @@map("queries")
}

model ResearchData {
  id          String   @id @default(cuid())
  queryId     String   @unique
  rawData     Json
  sources     Json
  summary     String   @db.Text
  createdAt   DateTime @default(now())

  query Query @relation(fields: [queryId], references: [id], onDelete: Cascade)

  @@map("research_data")
}

model Content {
  id            String   @id @default(cuid())
  queryId       String
  contentType   String
  title         String
  data          Json
  storageUrl    String?
  metadata      Json?
  generatedAt   DateTime @default(now())

  query        Query          @relation(fields: [queryId], references: [id], onDelete: Cascade)
  savedBy      SavedContent[]

  groupShares        GroupSharedContent[]

  @@index([queryId])
  @@index([contentType])
  @@map("content")
}

model SavedContent {
  id        String   @id @default(cuid())
  userId    String
  contentId String
  notes     String?  @db.Text
  tags      String[]
  savedAt   DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  content Content @relation(fields: [contentId], references: [id], onDelete: Cascade)

  @@unique([userId, contentId])
  @@index([userId])
  @@map("saved_content")
}

model LearningAnalytics {
  id                   String   @id @default(cuid())
  userId               String
  contentId            String?
  queryId              String?
  timeSpent            Int
  completionPercentage Float?
  feedbackRating       Int?
  recordedAt           DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([recordedAt])
  @@map("learning_analytics")
}

// Shared Content
model SharedContent {
  id          String   @id @default(cuid())
  queryId     String
  userId      String
  shareType   String   // "public" | "private" | "friends"
  shareToken  String   @unique
  views       Int      @default(0)
  createdAt   DateTime @default(now())
  expiresAt   DateTime?

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  query       Query    @relation(fields: [queryId], references: [id], onDelete: Cascade)
  comments    Comment[]

  @@index([shareToken])
  @@index([userId])
  @@index([queryId])
  @@map("shared_content")
}

// Comments on shared content
model Comment {
  id              String   @id @default(cuid())
  sharedContentId String
  userId          String
  text            String   @db.Text
  parentId        String?  // For nested replies
  likes           Int      @default(0)
  createdAt       DateTime @default(now())

  sharedContent   SharedContent @relation(fields: [sharedContentId], references: [id], onDelete: Cascade)
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  parent          Comment?      @relation("CommentReplies", fields: [parentId], references: [id])
  replies         Comment[]     @relation("CommentReplies")
  likedBy         CommentLike[]

  @@index([sharedContentId])
  @@index([userId])
  @@map("comments")
}

// Comment likes
model CommentLike {
  id        String   @id @default(cuid())
  commentId String
  userId    String
  createdAt DateTime @default(now())

  comment   Comment  @relation(fields: [commentId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([commentId, userId])
  @@map("comment_likes")
  @@index([commentId])
  @@index([userId])
}

// Study Groups
model StudyGroup {
  id          String   @id @default(cuid())
  name        String
  description String?  @db.Text
  creatorId   String
  inviteCode  String   @unique
  isPublic    Boolean  @default(false)
  createdAt   DateTime @default(now())

  creator     User              @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  members     StudyGroupMember[]
  sharedContent GroupSharedContent[]

  @@index([inviteCode])
  @@map("study_groups")
}

// Study Group Members
model StudyGroupMember {
  id        String   @id @default(cuid())
  groupId   String
  userId    String
  role      String   @default("member") // "admin" | "member"
  joinedAt  DateTime @default(now())

  group     StudyGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([groupId, userId])
  @@index([userId])
  @@map("study_group_members")
}

// Content shared in groups
model GroupSharedContent {
  id        String   @id @default(cuid())
  groupId   String
  contentId String
  userId    String
  createdAt DateTime @default(now())

  group     StudyGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
  content   Content    @relation(fields: [contentId], references: [id], onDelete: Cascade)
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([groupId])
  @@map("group_shared_content")
}

// Quiz Leaderboard
model QuizScore {
  id          String   @id @default(cuid())
  userId      String
  queryId     String
  score       Int
  totalQuestions Int
  timeSpent   Int      // seconds
  completedAt DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  query       Query    @relation(fields: [queryId], references: [id], onDelete: Cascade)

  @@index([queryId])
  @@index([userId])
  @@index([score])
  @@map("quiz_scores")
}

// User follows (for social feed)
model UserFollow {
  id          String   @id @default(cuid())
  followerId  String
  followingId String
  createdAt   DateTime @default(now())

  follower    User     @relation("UserFollower", fields: [followerId], references: [id], onDelete: Cascade)
  following   User     @relation("UserFollowing", fields: [followingId], references: [id], onDelete: Cascade)

  @@unique([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
  @@map("user_follows")
}

model PushSubscription {
  id        String   @id @default(cuid())
  userId    String
  endpoint  String   @unique
  p256dh    String
  auth      String
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("push_subscriptions")
}

model Subscription {
  id                    String    @id @default(cuid())
  userId                String
  plan                  String
  status                String
  razorpayOrderId       String
  razorpayPaymentId     String
  razorpaySubscriptionId String?
  startDate             DateTime
  endDate               DateTime
  createdAt             DateTime  @default(now())
  
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@map("subscriptions")
}

model SavedQuery {
  id                String            @id @default(cuid())
  userId            String
  queryId           String
  tags              String[]          @default([])
  notes             String?           @db.Text
  savedAt           DateTime          @default(now())
  
  user              User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  query             Query             @relation(fields: [queryId], references: [id], onDelete: Cascade)
  
  @@unique([userId, queryId])
  @@index([userId])
  @@index([queryId])
  @@map("saved_queries")
}